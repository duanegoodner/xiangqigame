{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/project/src/xiangqigame_cpp/game_board",
                "-I${workspaceFolder}/project/src/xiangqigame_cpp/minimax_evaluator",
                "-I${workspaceFolder}/project/src/xiangqigame_cpp/move_calculator",
                "-I${workspaceFolder}/project/src/xiangqigame_cpp/piece_points_builder",
                "-I${workspaceFolder}/project/src/xiangqigame_cpp/move_selector",
                "-fdiagnostics-color=always",
                "-fopenmp",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        },
    ],
    "version": "2.0.0"
}